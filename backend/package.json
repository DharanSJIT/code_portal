{
  "name": "hope-portal-backend",
  "version": "1.0.0",
  "description": "Backend for Hope Portal - A coding profile aggregator",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "cross-env PORT=5001 node server.js",
    "dev": "cross-env PORT=5001 nodemon -r dotenv/config server.js",
    "dev:debug": "cross-env PORT=5001 nodemon --inspect -r dotenv/config server.js",
    "dev:emulator": "cross-env PORT=5001 FIREBASE_AUTH_EMULATOR_HOST=localhost:9099 FIRESTORE_EMULATOR_HOST=localhost:8080 nodemon -r dotenv/config server.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "prepare": "husky install"
  },
  "dependencies": {
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "firebase-admin": "^12.7.0",
    "helmet": "^7.2.0",
    "morgan": "^1.10.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.9",
    "puppeteer": "^22.15.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.18.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,md,json}": "prettier --write"
  },
  "keywords": [
    "coding",
    "profiles",
    "leetcode",
    "codeforces",
    "github",
    "atcoder",
    "hackerrank",
    "scraping"
  ],
  "author": "",
  "license": "MIT"
}
